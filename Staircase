import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */     try{InputStreamReader in=new InputStreamReader(System.in);
                                                                                                                                BufferedReader in1=new BufferedReader(in);
                                                                                                                                
          int v=Integer.parseInt(in1.readLine());
                                                                                                                               // System.out.println(v);
          for(int i=v;i>0;i--)
          { int g=i;
              for(int y=i-1;y>0;y--)
              {
              System.out.print(" ");
                }
          for(int p=v-g+1;p>0;p--)
          {System.out.print("#");}    
        
           System.out.println();
               
          }                                                                                                           
                                                                                                                         
        
    }catch(IOException e){}
    }}